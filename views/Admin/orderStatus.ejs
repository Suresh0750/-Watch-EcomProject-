
<%-include("../layouts/adminHeader.ejs")%>

<style>
    td {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
</style>

<!-- Template CSS -->
<link href="/assets1/css/main.css" rel="stylesheet" type="text/css" />
<!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"> -->

<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />

    <!-- jquery- datatables -->
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />
    <link rel="shortcut icon" href="../../assets1/images1/slidesshow-banners/smart-watch.png" />

    <header class="main-header navbar" >
        <div class="col-search">
            <form class="searchform">
                <div class="input-group" style="margin-left: 21em;">
                    <input list="search_terms" type="text" class="form-control" placeholder="Search term">
                    <button class="btn btn-light bg" type="button"> <i class="material-icons md-search"></i></button>
                </div>
                <datalist id="search_terms">
                    <option value="Products">
                    <option value="New orders">
                    <option value="Apple iphone">
                    <option value="Ahmed Hassan">
                </datalist>
            </form>
        </div>
        <div class="col-nav">
          <button class="btn btn-primary" style="color: wheat !important;"><a href="/admin/adminlogut" style="color: white">Logout</a></button>
        </div>
    </header>

    <section class="order-section">

        <div class="container p-3">
            <div class="order-details" style="
            margin-left: 17em;">
                <div class="row">
                    <div class="col-6 text-center"> <!-- Add text-center class to center the content -->
                        <p class="order-number"><strong>Order Number:</strong> #<%=orderData.orderNumber%></p>
                        <div class="card text-white bg-lightgreen mb-3"> <!-- Change bg-success to your desired light green color -->
                            <div class="card-body">
                                <h5 class="card-title"><%=orderData.orderStatus%></h5>
                            </div>
                        </div>
                        <div class="order-info">
                            <p class="order-status"><strong>Status:</strong> <%=orderData.orderStatus%></p>
                            <p class="order-date"><strong>Order Date:</strong> <%=orderData.orderDate%></p>
                        </div>
                    </div>
                    <style>
                        .bg-lightgreen {
                            background-color: #0b0b0b; /* Your desired light green color */
                        }
                    </style>
                    
                    
                    
                    <div class="col-6">
                        <div class="card bg-light address-card">
                            <div class="card-header">Address</div>
                            <div class="card-body">
                                <h5 class="card-title"><%=orderData.addressChosen.addressTitle%></h5>
                                <p class="card-text">
                                    name: <%=orderData.addressChosen.name%> <br />
                                    Phone: <%=orderData.addressChosen.phone%><br>
                                    houseNo:<%=orderData.addressChosen.houseNo%> <br />
                                    state:<%=orderData.addressChosen.state%> <br />
                                    city:<%=orderData.addressChosen.city%> <br />
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row p-3">
                    <div class="col-6">
                        <!-- Previous content here -->
                
                        <!-- Payment card in a light green box -->
                        <div class="payment-box bg-lightgreen p-3">
                            <div class="payment-card card text-white bg-secondary">
                                <div class="card-header">Payment</div>
                                <div class="card-body">
                                    <h5 class="card-title">₹<%=orderData.grandTotalCost%></h5>
                                    <p class="card-text"><%=orderData.paymentType%></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <style>
                    .bg-lightgreen {
                        background-color: #000000; /* Your desired light green color */
                    }
                
                    .payment-box {
                        border: 1px solid #ffffff; /* Add a border for the box */
                        border-radius: 8px; /* Add border radius for rounded corners */
                    }
                </style>
                
                
                <h5 class="product-details-heading">Product details:</h5>
                <div class="row p-3">
                    <table id="orderStatus" class="table">
                        <thead>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Total Cost</th>
                        </thead>

                        <tbody>
                            <%orderData.cartData.forEach(cartItem=> {%>
                                <tr>
                                    <td>
                                        <div class="product-image"><a href=""><img
                                            
                                            src="../../images/categoriedImages/<%=cartItem.productId.productImage1%>" alt="userproduct"></a>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="product-info">
                                            <h4><%=cartItem.productId.productName%></h4>
                                            <div class="product-price"><span>₹<%=cartItem.productId.productPrice%></span>
                                            </div>
                                        </div>
                                    </td>
                                    <td><%=cartItem.productQuantity%></td>
                                    <td>
                                        <div class="total-cost"><span>₹<%=cartItem.totalCastPerproduct%></span></div>
                                    </td> 

                                </tr>
                                <%});%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    
    </section>
    
    

 





